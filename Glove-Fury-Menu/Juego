import pygame
import sys

pygame.init()

#Resolucion de la pantalla
size = (1405, 900)

#Aqui vamos a crear la ventana
screen = pygame.display.set_mode(size)

#Para cargar las imagenes
imagen = pygame.image.load("assets/octagono.png").convert()
Peleador = pygame.image.load("assets/andre-antunes-i-foot-work.gif").convert_alpha()
Puñetazo_I = pygame.image.load("assets/andre-antunes-i-left-punch.gif").convert_alpha()
Peleador2 = pygame.image.load("assets/pixil-frame-0.png")
Vida_Rojo = pygame.image.load("assets/VidaRojo.png")
Vida_Azul = pygame.image.load("assets/VidaAzul.png")


#Variable para las posiciones
Peleador_x = -120
Peleador_Y = 30

Peleador2_x = 700
Peleador2_Y = 30
#Variable para añadir velocidad
Velocidad = 5

class Boxeador:
    def __init__(self, izquierda, derecha):
     self.izquierda = izquierda
     self.derecha = derecha
     self.Velocidad = Velocidad

#Colores
Red = 255, 0, 0
Blue = 0, 0, 255

while True:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            print(event)
            sys.exit()
    screen.blit(imagen, [0, 0])

    #Variable para las teclas
    Tecla = pygame.key.get_pressed()
    
    #Este if es para los movimientos del peleador rojo
    if Tecla[pygame.K_a]:
        Peleador_x -= Velocidad
    if Tecla[pygame.K_d]:
        Peleador_x += Velocidad
    
    #Lo utilizamos para que se vean los personajes 
    screen.blit(Peleador, (Peleador_x, Peleador_Y))
    screen.blit(Peleador2, (Peleador2_x, Peleador2_Y))
    
    #Colisiones del peleador rojo
    if Peleador_x < -300:
        Peleador_x = -300
    if Peleador_x > 900:
        Peleador_x = 900

    #Este if es para los movimientos del peleador azul
    if Tecla[pygame.K_LEFT]:
        Peleador2_x -= Velocidad
    if Tecla[pygame.K_RIGHT]:
        Peleador2_x += Velocidad
    
    #Colisiones del peleador azul    
    if Peleador2_x < -300:
        Peleador2_x = -300
    if Peleador2_x > 900:
        Peleador2_x = 900
    
    #Barras de vida
    screen.blit(Vida_Rojo, [100, 0])
    screen.blit(Vida_Azul, [800, 0])
    
    pygame.display.flip()


